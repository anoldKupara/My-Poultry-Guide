<div class="row">
  <div class="col-xl">
    <div class="card mb-4">

      <div class="card-body">
        <%= form_with(model: budget, local: true) do |form| %>
          <% if budget.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(budget.errors.count, "error") %> prohibited this budget from being saved:</h2>

              <ul>
              <% budget.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :name, class: "form-label"  %>
            <%= form.text_field :name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :purpose, class: "form-label"  %>
            <%= form.text_field :purpose, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :source_of_fund, class: "form-label"  %>
            <%= form.text_field :source_of_fund, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :project_duration, class: "form-label"  %>
            <%= form.text_field :project_duration, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :amount, class: "form-label"  %>
            <%= form.text_field :amount, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :currency_id, class: "form-label"  %>
            <%= form.select :currency_id, Currency.all.collect {|c| [c.name, c.id]}, {prompt: "Select Currency"}, class: "form-select form-select-lg" %>
          </div>

          <div class="actions">
            <%= form.submit "Create Budget", class: "btn btn-primary" %> |
            <%= link_to 'Show', @budget, :class => "btn btn-primary" %> |
            <%= link_to 'Back' , budgets_path, :class => "btn btn-primary"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>