<div class="container-xxl flex-grow-1 container-p-y">
  
   <!-- Footer with components -->
  <section id="component-footer">

    <footer class="footer bg-light">
      <div class="container-fluid d-flex flex-md-row flex-column justify-content-between align-items-md-center gap-1 container-p-x py-3">
        <div><strong>Bird Categories</div>
        <div>
          <%= link_to new_bird_category_path, class: "btn btn-sm btn-outline-primary" do %>
          <i class="bx bx-log-out-circle"></i> New Bird Category
          <% end %>
        </div>
      </div>
    </footer>
  </section>
  <!--/ Footer with components -->

  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="table-responsive text-nowrap">
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Purpose</th>
                <th>Breed</th>
                <th colspan="3">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @bird_categories.each do |bird_category| %>
                <tr>
                  <td><%= bird_category.name %></td>
                  <td><%= bird_category.purpose %></td>
                  <td><%= bird_category.breed %></td>
                  <td><%= link_to 'Show', bird_category %></td>
                  <td><%= link_to 'Edit', edit_bird_category_path(bird_category) %></td>
                  <td><%= link_to 'Destroy', bird_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>

