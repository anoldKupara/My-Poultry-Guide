<div class="container-xxl flex-grow-1 container-p-y">
  
   <!-- Footer with components -->
  <section id="component-footer">

    <footer class="footer bg-light">
      <div class="container-fluid d-flex flex-md-row flex-column justify-content-between align-items-md-center gap-1 container-p-x py-3">
        <div><strong>Inventories</div>
        <div>
          <%= link_to new_inventory_path, class: "btn btn-sm btn-outline-primary" do %>
          <i class="bx bx-log-out-circle"></i> New Inventory
          <% end %>
        </div>
      </div>
    </footer>
  </section>
  <!--/ Footer with components -->

  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="table-responsive text-nowrap">
          <table class="table">
            <thead>
              <tr>
                <th>Item name</th>
                <th>Purpose</th>
                <th>Quantity</th>
                <th>Value</th>
                <th>Currency</th>
                <th>Expiry date</th>
                <th colspan="3">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @inventories.each do |inventory| %>
                <tr>
                  <td><%= inventory.item_name %></td>
                  <td><%= inventory.purpose %></td>
                  <td><%= inventory.quantity %></td>
                  <td><%= inventory.value %></td>
                  <td><%= inventory.currency.name %></td>
                  <td><%= inventory.expiry_date %></td>
                  <td>
                    <div class="dropdown">
                      <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="bx bx-dots-vertical-rounded"></i>
                      </button>
                      <div class="dropdown-menu" style="padding: 3px;">
                        <%= link_to inventory do %>
                        <i class="bx bx-edit-alt me-1"></i> View
                        <% end %>
                        <%= link_to edit_inventory_path(inventory) do %>
                        <i class="bx bx-edit-alt me-1"></i> Edit
                        <% end %>
                        <%= link_to inventory, method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <i class="bx bx-trash me-1"></i> Delete
                        <% end %>
                      </div>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br>
        </div>
     </div>
    </div>
  </div>
</div>