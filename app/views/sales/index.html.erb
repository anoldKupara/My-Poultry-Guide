<div class="container-xxl flex-grow-1 container-p-y">
  
   <!-- Footer with components -->
  <section id="component-footer">

    <footer class="footer bg-light">
      <div class="container-fluid d-flex flex-md-row flex-column justify-content-between align-items-md-center gap-1 container-p-x py-3">
        <div><strong>Sales</div>
        <div>
          <%= link_to new_sale_path, class: "btn btn-sm btn-outline-primary" do %>
          <i class="bx bx-log-out-circle"></i> New Sale
          <% end %>
        </div>
      </div>
    </footer>
  </section>
  <!--/ Footer with components -->

  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="table-responsive text-nowrap">
          <table class="table">
            <thead>
              <tr>
                <th>Customer name</th>
                <th>Item purchased</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Payment method</th>
                <th>Currency</th>
                <th>Day</th>
                <th colspan="3">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @sales.each do |sale| %>
                <tr>
                  <td><%= sale.customer_name %></td>
                  <td><%= sale.item_purchased %></td>
                  <td><%= sale.quantity %></td>
                  <td><%= sale.price %></td>
                  <td><%= sale.payment_method.name %></td>
                  <td><%= sale.currency.name %></td>
                  <td><%= sale.day %></td>
                  <td>
                      <div class="dropdown">
                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                          <i class="bx bx-dots-vertical-rounded"></i>
                        </button>
                        <div class="dropdown-menu" style="padding: 3px;">
                          <%= link_to sale do %>
                          <i class="bx bx-edit-alt me-1"></i> View
                          <% end %>
                          <%= link_to edit_sale_path(sale) do %>
                          <i class="bx bx-edit-alt me-1"></i> Edit
                          <% end %>
                          <%= link_to sale, method: :delete, data: { confirm: 'Are you sure?' } do %>
                          <i class="bx bx-trash me-1"></i> Delete
                          <% end %>
                        </div>
                      </div>
                    </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <br>
      </div>
    </div>
  </div>
</div>
