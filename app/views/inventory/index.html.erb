<div class="container-xxl flex-grow-1 container-p-y">
 
   <!-- Footer with components -->
  <section id="component-footer">

    <footer class="footer bg-light">
      <div class="container-fluid d-flex flex-md-row flex-column justify-content-between align-items-md-center gap-1 container-p-x py-3">
        <div><strong><span class="text-muted fw-light">Inventory /</span> Materials</div>
        <div>
          <%= link_to new_expense_transaction_path, class: "btn btn-sm btn-outline-primary" do %>
          <i class="bx bx-log-out-circle"></i> Add Inventory
          <% end %>
        </div>
      </div>
    </footer>
  </section>
  <!--/ Footer with components -->

  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <h4 class="fw-bold py-3 mb-4"></h4>
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="table-responsive text-nowrap">
          <table class="table">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>Purpose</th>
                <th>Budget Item</th>
                <th>Category</th>
                <th>Unit</th>
                <th>Budgeted Quantity</th>
                <th>Quantity</th>
                <th>Total Amount</th>
                <th>Variance</th>
              </tr>
            </thead>

            <tbody>
              <% @inventories.each_with_index do |inventory, i| %>
                <tr>
                  <td ><%= i += 1 %></td>
                  <td><%= inventory.name %></td>
                  <td><%= inventory.description %></td>
                  <td><%= inventory.purpose %></td>
                  <td><%= inventory.budget_item.item_description unless inventory.budget_item_id.nil? %></td>
                  <td><%= inventory.inventory_category.name %></td>
                  <td align="center"><%= inventory.measuring_unit.description %></td>
                  <td align="center"><%= inventory.budget_item.quantity %></td>
                  <td align="right"><%= inventory.quantity  %></td>
                  <td align="right"><%= number_to_currency(inventory.line_total, unit: "") %></td>
                  <td><%= inventory.variance %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

