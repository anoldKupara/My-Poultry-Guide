<div class="row">
  <div class="col-xl">
    <div class="card mb-4">

      <div class="card-body">
        <%= form_with(model: expense, local: true) do |form| %>
          <% if expense.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

              <ul>
              <% expense.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :name, class: "form-label"  %>
            <%= form.text_field :name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :quantity, class: "form-label"  %>
            <%= form.text_field :quantity, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :price, class: "form-label"  %>
            <%= form.text_field :price, class: "form-control" %>
          </div>


          <div class="mb-3">
            <%= form.label :currency_id, class: "form-label"  %>
            <%= form.select :currency_id, Currency.all.collect {|c| [c.name, c.id]}, {prompt: "Select Currency"}, class: "form-select form-select-lg" %>
          </div>

          <div class="actions">
            <%= form.submit "Create Expense", class: "btn btn-primary" %> |
            <%= link_to 'Show', @expenses, :class => "btn btn-primary" %> |
            <%= link_to 'Back' , expenses_path, :class => "btn btn-primary"%>
          </div>
        <% end %>
     </div>
    </div>
  </div>
</div>